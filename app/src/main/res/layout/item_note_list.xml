<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/normal_110dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:background="@color/white">

    <TextView
        android:id="@+id/item_time"
        android:layout_width="@dimen/normal_0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textColor="@color/color_333"
        android:textSize="@dimen/normal_28sp"
        android:gravity="center_vertical"
        tools:text="2018-03-19"
        android:layout_marginLeft="@dimen/normal_24dp"
        />

    <TextView
        android:id="@+id/item_success"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textColor="@color/color_666"
        android:textSize="@dimen/normal_28sp"
        android:gravity="center_vertical"
        tools:text="成功：1800"
        android:layout_marginLeft="@dimen/normal_30dp"
        />

    <TextView
        android:id="@+id/item_fair"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textColor="@color/color_999"
        android:textSize="@dimen/normal_28sp"
        android:gravity="center_vertical"
        tools:text="失败：3"
        android:layout_marginRight="@dimen/normal_30dp"
        android:layout_marginLeft="@dimen/normal_80dp"
        />
</LinearLayout>