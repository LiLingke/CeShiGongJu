<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/normal_110dp"
        android:orientation="horizontal"
        android:background="@drawable/clickable_bg_item">

        <ImageView
            android:layout_width="@dimen/normal_60dp"
            android:layout_height="@dimen/normal_60dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/normal_24dp"
            android:src="@drawable/ic_ble"
            />

        <LinearLayout
            android:layout_width="@dimen/normal_0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/normal_24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_mac"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/normal_30sp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    tools:text="ble" />

                <TextView
                    android:id="@+id/item_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/normal_30sp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    tools:text="ble" />
            </LinearLayout>

        </LinearLayout>

       <TextView
           android:id="@+id/tv_distance"
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           android:textColor="@color/color_333"
           android:textSize="@dimen/normal_28sp"
           android:gravity="center_vertical"
           android:layout_marginRight="@dimen/normal_24dp"
           tools:text="-57"/>

        <ImageView
            android:layout_width="@dimen/normal_30dp"
            android:layout_height="@dimen/normal_30dp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/normal_2dp"
        android:background="@color/color_bg"/>
</LinearLayout>