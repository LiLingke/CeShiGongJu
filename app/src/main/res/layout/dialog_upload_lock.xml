<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="340dp"
    android:layout_height="wrap_content"
    android:background="@drawable/shaper_circular_bead_bg"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/normal_75dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text2"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/normal_24dp"
            android:text="制作机号："
            android:textColor="@color/color_333"
            android:textSize="@dimen/normal_28sp" />

        <EditText
            android:id="@+id/et_num"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:hint="请输入机号"
            android:paddingLeft="@dimen/normal_24dp"
            android:textColor="@color/color_333"
            android:textSize="@dimen/normal_28sp"
            android:inputType="number"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/normal_75dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text2"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/normal_24dp"
            android:text="生成字符串："
            android:textColor="@color/color_333"
            android:textSize="@dimen/normal_28sp" />

        <TextView
            android:id="@+id/tv_key"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/normal_6dp"
            android:textColor="@color/color_333"
            android:textSize="@dimen/normal_28sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp">

        <Button
            android:id="@+id/btn_include_left"
            android:layout_width="0dp"
            android:layout_height="@dimen/normal_80dp"
            android:layout_marginRight="@dimen/normal_12dp"
            android:layout_weight="1"
            android:background="@drawable/shap_button_black_frame"
            android:text="设置机号并上传"
            android:textColor="@color/color_333"
            android:textSize="@dimen/normal_28sp" />

        <Button
            android:id="@+id/btn_include_right"
            android:layout_width="0dp"
            android:layout_height="@dimen/normal_80dp"
            android:layout_marginLeft="@dimen/normal_12dp"
            android:layout_weight="1"
            android:background="@drawable/shap_button_black_frame"
            android:text="放弃"
            android:textColor="@color/color_333"
            android:textSize="@dimen/normal_28sp" />
    </LinearLayout>
</LinearLayout>