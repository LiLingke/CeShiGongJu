<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <cn.dlc.commonlibrary.ui.widget.TitleBar
        android:id="@+id/titlebar"
        style="@style/CommonTitleBarStyle"
        app:titleText="@string/ceshigongju" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_lock_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/normal_30dp"
            android:paddingLeft="@dimen/normal_48dp"
            android:text="蓝牙名称：BT02"
            android:textColor="@color/color_333"
            android:textSize="@dimen/normal_28sp" />

        <TextView
            android:id="@+id/tv_lock_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/normal_12dp"
            android:paddingLeft="@dimen/normal_48dp"
            android:text="蓝牙地址：49:01:B9:D2:A2:EB"
            android:textColor="@color/color_333"
            android:textSize="@dimen/normal_28sp" />

        <TextView
            android:id="@+id/tv_lock_distance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/normal_6dp"
            android:layout_marginTop="@dimen/normal_12dp"
            android:paddingLeft="@dimen/normal_48dp"
            android:text="信号强度：-57"
            android:textColor="@color/color_333"
            android:textSize="@dimen/normal_28sp" />

        <TextView
            android:id="@+id/tv_lock_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/normal_6dp"
            android:layout_marginTop="@dimen/normal_12dp"
            android:paddingLeft="@dimen/normal_48dp"
            android:text="序号："
            android:textColor="@color/color_txt_red"
            android:textSize="@dimen/normal_28sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/normal_12dp"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/normal_90dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="@dimen/normal_48dp"
                android:text="开门机号："
                android:textColor="@color/color_333"
                android:textSize="@dimen/normal_28sp" />

            <EditText
                android:id="@+id/et_num"
                android:layout_width="@dimen/normal_0dp"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:hint="0001(点击修改)"
                android:paddingLeft="@dimen/normal_6dp"
                android:textColor="@color/color_333"
                android:textSize="@dimen/normal_28sp"
                android:inputType="number"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tv_check"
                android:layout_width="@dimen/normal_140dp"
                android:layout_height="@dimen/normal_40dp"
                android:layout_gravity="center_vertical"
                android:text="查看机号"
                android:textColor="@color/color_333"
                android:textSize="@dimen/normal_28sp"
                android:gravity="center"
                android:layout_marginRight="@dimen/normal_48dp"
                android:background="@drawable/shap_button_black_frame"/>

        </LinearLayout>


        <Button
            android:id="@+id/btn_open"
            android:layout_width="match_parent"
            android:layout_height="@dimen/normal_90dp"
            android:layout_marginBottom="@dimen/normal_24dp"
            android:layout_marginLeft="@dimen/normal_100dp"
            android:layout_marginRight="@dimen/normal_100dp"
            android:background="@drawable/shap_button_black_frame"
            android:text="开门"
            android:textColor="@color/color_333"
            android:textSize="@dimen/normal_28sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/normal_6dp"
        android:background="@color/white"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_upload"
            android:layout_width="match_parent"
            android:layout_height="@dimen/normal_90dp"
            android:layout_marginBottom="@dimen/normal_24dp"
            android:layout_marginLeft="@dimen/normal_100dp"
            android:layout_marginRight="@dimen/normal_100dp"
            android:layout_marginTop="@dimen/normal_48dp"
            android:background="@drawable/shap_button_black_frame"
            android:text="上传资料"
            android:textColor="@color/color_333"
            android:textSize="@dimen/normal_28sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/normal_6dp"
        android:background="@color/white"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_check"
            android:layout_width="match_parent"
            android:layout_height="@dimen/normal_90dp"
            android:layout_marginBottom="@dimen/normal_24dp"
            android:layout_marginLeft="@dimen/normal_100dp"
            android:layout_marginRight="@dimen/normal_100dp"
            android:layout_marginTop="@dimen/normal_48dp"
            android:background="@drawable/shap_button_black_frame"
            android:text="查看锁信息"
            android:textColor="@color/color_333"
            android:textSize="@dimen/normal_28sp" />

    </LinearLayout>

</LinearLayout>