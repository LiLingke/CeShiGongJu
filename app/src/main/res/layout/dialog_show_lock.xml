<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/normal_540dp"
    android:layout_height="wrap_content"
    xmlns:toosl="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shaper_circular_bead_bg"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/normal_60dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text2"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/normal_24dp"
            android:text="锁序号："
            android:textColor="@color/color_333"
            android:textSize="@dimen/normal_28sp" />

        <TextView
            android:id="@+id/tv_order"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/normal_24dp"
            android:textColor="@color/color_333"
            android:textSize="@dimen/normal_28sp"
            android:gravity="center_vertical"
            tools:text="123"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/normal_60dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text2"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/normal_24dp"
            android:text="锁机号："
            android:textColor="@color/color_333"
            android:textSize="@dimen/normal_28sp" />

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/normal_24dp"
            android:textColor="@color/color_333"
            android:textSize="@dimen/normal_28sp"
            android:gravity="center_vertical"
            tools:text="123"/>

    </LinearLayout>


    <ImageView
        android:id="@+id/img_show"
        android:layout_width="@dimen/normal_480dp"
        android:layout_height="@dimen/normal_480dp"
        android:layout_gravity="center_horizontal"
        tools:background="@mipmap/ic_launcher"
        android:layout_marginBottom="@dimen/normal_24dp"
        android:layout_marginTop="@dimen/normal_12dp"/>
</LinearLayout>